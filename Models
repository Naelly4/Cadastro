import psycopg2

#Teste

class DataBase():
    def __init__(self, host='localhost', user='postgres', password='Kayllon135', database='teste', port='5432'):
        self.host = host
        self.user = user
        self.password = password
        self.database = database
        self.port = port

    def conectar_banco(self):
        self.conexao = psycopg2.connect(host=self.host,
                                        user=self.user,
                                        password=self.password,
                                        database=self.database,
                                        port=self.port)
        self.cursor = self.conexao.cursor()

    def desconectar(self):
        self.conexao.close()

    def executa_Select(self, sql):
        self.conectar_banco()
        self.cursor.execute(sql)
        resposta = self.cursor.fetchall()
        self.desconectar()
        return resposta

    def executa_DML(self, sql):
        self.conectar_banco()
        self.cursor.execute(sql)
        self.conexao.commit()
        self.desconectar()


